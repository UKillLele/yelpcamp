<% include ../partials/header %>

<div class="container">
  <div container="row">
    <h1 style="text-align: center;">Edit Your Comment</h1>
    <div style="width: 30%; margin: 25px auto;">
      <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=put" method="post">
        <div class="form-group">
          <textarea class="form-control" rows="8" name="comment[text]"><%=comment.text%></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-default btn-block btn-primary" type="submit">Submit</button>
        </div>
      </form>
      <a href="/campgrounds/<%= campground_id%>">Go back</a>
    </div>
  </div>
</div>
<% include ../partials/footer %>
